 <item name="popupTheme">@style/Theme.AppCompat.Light</item>-->

    <!--<style name="AppTheme" parent="Theme.AppCompat.NoActionBar">-->

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
   <!-- <style name="AppTheme" parent="Theme.AppCompat">-->



        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>


    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/md_blue_grey_900</item>

    </style>

    <style name="TabHosTheme" parent="AppTheme">

        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@drawable/degradado_fondo_tabhost</item>
        <!-- <item name="android:scrollbarAlwaysDrawHorizontalTrack">@drawable/tabhost_scroll</item>-->


    </style>


    <style name="CustomPopUp" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparente</item>
    </style>

    <!--<item name="android:windowBackground">@drawable/trans</item>
    "Base.Theme.AppCompat.Light.Dialog.FixedSize"
    Base.Theme.AppCompat.Light.Dialog.Alert
    -->
    <style name="Theme.UserDialog" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparente</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="AppTheme" />

    <style name="AppTheme.PopupOverlay" parent="AppTheme" />

</resources>
