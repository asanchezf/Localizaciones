<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.antonioejemplo.localizaciones.MainActivity"
    android:background="@color/colorPrimary">



    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/brujula"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/necesitas_tener_una_cuenta_para_acceder"
        android:id="@+id/textView3"
        android:layout_marginTop="50dp"
        android:textColor="#eceff1"
        android:typeface="sans"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />



    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Sing Up"
        android:id="@+id/btnRegistrarse"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="14sp"
        android:typeface="sans"
        android:background="@drawable/tunear_button"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/btnLogin"
        android:layout_alignStart="@+id/btnLogin"
        android:drawableLeft="@drawable/icono_registro"
        android:drawableRight="@drawable/icono_registro" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/si_ya_tienes_una_cuenta_haz_click"
        android:id="@+id/textView2"
        android:layout_marginTop="32dp"
        android:textColor="#eceff1"
        android:typeface="sans"
        android:layout_below="@+id/btnRegistrarse"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Login Inr"
        android:id="@+id/btnLogin"
        android:background="@drawable/colorear_button"
        android:textColor="#ffffff"
        android:typeface="sans"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@android:drawable/ic_menu_mylocation" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="Desarrollador android:"
        android:id="@+id/textView4"
        android:layout_below="@+id/btnLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"

        android:text="antoniom.sanchezf@gmail.com"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:autoLink="email"
        android:backgroundTint="#ffffff" />


</RelativeLayout>